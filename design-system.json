{
    "meta": {
        "name": "SelfSaid Premium News Design System",
        "version": "1.0.0",
        "lastUpdated": "2025-01-03",
        "description": "A high-contrast, premium news and magazine design system focusing on readability, hierarchy, and bold visual impact."
    },
    "theme": {
        "colors": {
            "primary": {
                "main": "#D93025",
                "light": "#EA5C52",
                "dark": "#B31F15",
                "contrastText": "#FFFFFF"
            },
            "secondary": {
                "main": "#1A1A1A",
                "light": "#333333",
                "dark": "#000000",
                "contrastText": "#FFFFFF"
            },
            "accent": {
                "main": "#FFD700",
                "light": "#FFE55C",
                "dark": "#C7A800",
                "contrastText": "#1A1A1A"
            },
            "neutral": {
                "50": "#F9FAFB",
                "100": "#F3F4F6",
                "200": "#E5E7EB",
                "300": "#D1D5DB",
                "400": "#9CA3AF",
                "500": "#6B7280",
                "600": "#4B5563",
                "700": "#374151",
                "800": "#1F2937",
                "900": "#111827",
                "950": "#030712"
            },
            "semantic": {
                "success": "#10B981",
                "warning": "#F59E0B",
                "error": "#EF4444",
                "info": "#3B82F6"
            },
            "background": {
                "paper": {
                    "light": "#FFFFFF",
                    "dark": "#1A1A1A"
                },
                "default": {
                    "light": "#F9FAFB",
                    "dark": "#000000"
                }
            }
        },
        "typography": {
            "fontFamily": {
                "heading": "\"Merriweather\", \"Georgia\", serif",
                "body": "\"Inter\", \"system-ui\", sans-serif",
                "mono": "\"JetBrains Mono\", monospace"
            },
            "weights": {
                "regular": 400,
                "medium": 500,
                "semibold": 600,
                "bold": 700,
                "black": 900
            },
            "lineHeights": {
                "tight": 1.1,
                "snug": 1.3,
                "normal": 1.5,
                "relaxed": 1.625
            },
            "scale": {
                "display1": {
                    "fontSize": "4.5rem",
                    "lineHeight": "1.1",
                    "fontWeight": 900,
                    "letterSpacing": "-0.02em"
                },
                "display2": {
                    "fontSize": "3.75rem",
                    "lineHeight": "1.1",
                    "fontWeight": 900,
                    "letterSpacing": "-0.02em"
                },
                "h1": {
                    "fontSize": "3rem",
                    "lineHeight": "1.2",
                    "fontWeight": 800,
                    "letterSpacing": "-0.01em"
                },
                "h2": {
                    "fontSize": "2.25rem",
                    "lineHeight": "1.25",
                    "fontWeight": 700,
                    "letterSpacing": "-0.01em"
                },
                "h3": {
                    "fontSize": "1.875rem",
                    "lineHeight": "1.3",
                    "fontWeight": 700
                },
                "h4": {
                    "fontSize": "1.5rem",
                    "lineHeight": "1.4",
                    "fontWeight": 600
                },
                "h5": {
                    "fontSize": "1.25rem",
                    "lineHeight": "1.4",
                    "fontWeight": 600
                },
                "h6": {
                    "fontSize": "1.125rem",
                    "lineHeight": "1.4",
                    "fontWeight": 600
                },
                "bodyLarge": {
                    "fontSize": "1.125rem",
                    "lineHeight": "1.625",
                    "fontWeight": 400
                },
                "bodyBase": {
                    "fontSize": "1rem",
                    "lineHeight": "1.5",
                    "fontWeight": 400
                },
                "bodySmall": {
                    "fontSize": "0.875rem",
                    "lineHeight": "1.5",
                    "fontWeight": 400
                },
                "caption": {
                    "fontSize": "0.75rem",
                    "lineHeight": "1.5",
                    "fontWeight": 500,
                    "textTransform": "uppercase",
                    "letterSpacing": "0.05em"
                }
            }
        },
        "spacing": {
            "base": 4,
            "scale": {
                "0": "0px",
                "1": "4px",
                "2": "8px",
                "3": "12px",
                "4": "16px",
                "6": "24px",
                "8": "32px",
                "12": "48px",
                "16": "64px",
                "20": "80px",
                "24": "96px",
                "32": "128px"
            }
        },
        "breakpoints": {
            "xs": "0px",
            "sm": "640px",
            "md": "768px",
            "lg": "1024px",
            "xl": "1280px",
            "2xl": "1536px"
        },
        "borders": {
            "radius": {
                "none": "0px",
                "sm": "2px",
                "base": "4px",
                "md": "8px",
                "lg": "12px",
                "full": "9999px"
            },
            "width": {
                "thin": "1px",
                "medium": "2px",
                "thick": "4px"
            }
        },
        "shadows": {
            "sm": "0 1px 2px 0 rgba(0, 0, 0, 0.05)",
            "base": "0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06)",
            "md": "0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06)",
            "lg": "0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05)",
            "xl": "0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04)"
        }
    },
    "components": {
        "button": {
            "variants": {
                "primary": {
                    "bg": "primary.main",
                    "color": "primary.contrastText",
                    "hoverBg": "primary.dark",
                    "radius": "borders.radius.none",
                    "font": "typography.fontFamily.body",
                    "weight": "typography.weights.bond",
                    "transform": "uppercase"
                },
                "secondary": {
                    "bg": "transparent",
                    "color": "secondary.main",
                    "border": "1px solid secondary.main",
                    "hoverBg": "secondary.main",
                    "hoverColor": "secondary.contrastText"
                }
            },
            "sizes": {
                "sm": {
                    "padding": "8px 16px",
                    "fontSize": "0.875rem"
                },
                "md": {
                    "padding": "12px 24px",
                    "fontSize": "1rem"
                },
                "lg": {
                    "padding": "16px 32px",
                    "fontSize": "1.125rem"
                }
            }
        },
        "card": {
            "base": {
                "bg": "background.paper.light",
                "radius": "borders.radius.sm",
                "overflow": "hidden",
                "border": "1px solid neutral.200"
            },
            "hover": {
                "shadow": "shadows.lg",
                "transform": "translateY(-4px)"
            },
            "dark": {
                "bg": "background.paper.dark",
                "border": "1px solid neutral.800"
            }
        },
        "badge": {
            "base": {
                "padding": "4px 8px",
                "radius": "borders.radius.none",
                "fontSize": "typography.scale.caption.fontSize",
                "fontWeight": "typography.weights.bold",
                "transform": "uppercase"
            }
        },
        "grid": {
            "columns": 12,
            "gutter": "spacing.scale.6",
            "maxWidth": "breakpoints.2xl"
        }
    }
}